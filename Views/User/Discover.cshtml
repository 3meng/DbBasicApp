@using System.Collections.Generic
@model IList<LoginInfo>

@{
    ViewData["Title"] = "发现";
}

<h2>@(ViewData["Title"])</h2>
<div class="row">
    <div class="col-md-7">
        <form id="userSearch" method="get" action="@Url.Action("SearchUser", "User")" class="form-horizontal" role="form">
            <h4>搜索其它用户</h4>
            <hr />
            <div class="form-group">
                <div class="col-md-10">
                    <input class="form-control" type="text" id="q" name="q" autofocus="autofocus" style="display: inline-block" />
                    <button type="submit" class="btn btn-primary">搜 索</button>
                </div>
                <span class="col-md-10">输入用户名进行搜索</span>
            </div>
        </form>
        <div id="searchResult"></div>
    </div>
    <div class="col-md-offset-1 col-md-4">
        <h4>客服 & 工作人员</h4>
        <hr />
        @if (Model.Count == 0)
        {
            <div class="alert alert-info">
                <strong>提示：</strong>
                暂时没有发现客服或者工作人员。
            </div>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <th>#</th>
                    <th>用户名</th>
                    <th>职位</th>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var user = Model[i];
                        
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                <a href="@Url.Action("UserInfo", "User", new { id = user.UserName })">@user.UserName</a>
                            </td>
                            @if (user.Level == 1)
                            {
                                <td>客服</td>
                            }
                            else
                            {
                                <td>工作人员</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section scripts {
    <script>
        $("#userSearch").submit(function(event) {
            event.preventDefault();
            if ($("#q").value == "") {
                return;
            }
            
            var form = $(this);
            $.ajax({
                url: form.attr("action"),
                data: form.serialize(),
                error: function() {
                    $("#searchResult").html("抱歉，搜索期间出了一点问题。");
                },
                success: function(data) {
                    $("#searchResult").html(data);
                }
            });
        })
    </script>
}